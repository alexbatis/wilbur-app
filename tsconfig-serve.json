{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "paths": {
    "@app/*": [
      "app/*"
    ],
    "@models/*": [
      "app/models/*"
    ],
    "@services/*": [
      "app/services/*"
    ],
    "@pipes/*": [
      "app/pipes/*"
    ],
    "@core/*": [
      "app/core/*"
    ],
    "@classes/*": [
      "app/classes/*"
    ],
    "@shared/*": [
      "app/shared/*"
    ],
    "@static/*": [
      "app/static/*"
    ],
    "@redux/*": [
      "app/core/redux/*"
    ],
    "@env/*": [
      "environments/*"
    ],
    "@testing/*": [
      "testing/*"
    ]
  },
  "include": [
    "main.ts",
    "browser-ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
