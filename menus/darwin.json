        {
          "type": "separator"
        },
        {
          "label": "Cut",
          "accelerator": "CmdOrCtrl+X",
          "selector": "cut:"
        },
        {
          "label": "Copy",
          "accelerator": "CmdOrCtrl+C",
          "selector": "copy:"
        },
        {
          "label": "Paste",
          "accelerator": "CmdOrCtrl+V",
          "selector": "paste:"
        },
        {
          "label": "Select All",
          "accelerator": "CmdOrCtrl+A",
          "selector": "selectAll:"
        }
      ]
    }
