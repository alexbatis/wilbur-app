{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "baseUrl": "./src",
    "types": [
      "jasmine"
    ],
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@models/*": [
        "app/models/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@providers/*": [
        "app/providers/*"
      ],
      "@pipes/*": [
        "app/pipes/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@classes/*": [
        "app/classes/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@static/*": [
        "app/static/*"
      ],
      "@redux/*": [
        "app/core/redux/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@testing/*": [
        "testing/*"
      ]
    },
  },
  "include": [
    "main.ts",
    "browser/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
